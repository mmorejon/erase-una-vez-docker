# base image
FROM golang:1.18.1-alpine3.15
# set up work directory
WORKDIR /opt/app
# copy files dependencies
COPY go.* /opt/app
# install dependencies
RUN go mod download && \
    go mod verify
# copy app files
COPY . .
# build app
RUN GOOS=linux go build -o /go/bin/app .
# define run command
ENTRYPOINT [ "app" ]
